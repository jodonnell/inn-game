{
  "name": "noname",
  "version": "0.0.1",
  "description": "Cozy inn management game packaged for desktop via Electron.",
  "main": "electron/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js test --coverage",
    "prettier": "prettier -w src/**/*.js *.js test/**/*.js",
    "lint": "eslint src/**/*.js test/**/*.js",
    "dev": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "deploy": "scripts/deploy.sh",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "type": "module",
  "author": "Jacob",
  "license": "ISC",
  "dependencies": {
    "pixi.js": "^8.9.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "electron": "^34.1.2",
    "electron-builder": "^25.1.8",
    "prettier": "^3.5.3",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.inngame.desktop",
    "productName": "Inn Game",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game"
    }
  }
}
